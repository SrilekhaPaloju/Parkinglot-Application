{
  "name": "Parking-Application",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^7.9.3",
    "@sap/cds-hana": "^2",
    "@sap/cds-odata-v2-adapter-proxy": "^1.9.21",
    "@sap/xssec": "^3",
    "express": "^4",
    "npx": "^10.2.2",
    "passport": "^0.7.0"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^1",
    "@sap/cds-dk": "^7",
    "@sap/eslint-plugin-cds": "^3",
    "@sap/ux-specification": "^1.120.14",
    "eslint": "^9",
    "rimraf": "^5.0.5"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-parkinglotfiori": "cds watch --open parkinglotfiori/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-parkinglot": "cds watch --open parkinglot/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-pakinglotfiorielemnt": "cds watch --open pakinglotfiorielemnt/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-vendorapplication": "cds watch --open vendorapplication/webapp/index.html?sap-ui-xx-viewCache=false",
    "undeploy": "cf undeploy Parking-Application --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "sapux": [
    "app/parkinglotfiori",
    "app/pakinglotfiorielemnt"
  ],
  "cds": {
    "requires": {
      "db": {
        "[devlopment]": {
          "kind": "sqlite"
        },
        "[production]": {
          "kind": "hana"
        }
      },
      "[production]": {
        "auth": "xsuaa"
      },
      "[development]": {
        "auth": {
          "kind": "mocked",
          "users": {
            "admin@sap.com": {
              "password": "Initial",
              "ID": "admin@sap.com",
              "roles": [
                "Admin"
              ]
            },
            "user@sap.com": {
              "password": "Initial",
              "ID": "user@sap.com",
              "roles": [
                "User"
              ]
            }
          }
        }
      }
    }
  }
}
