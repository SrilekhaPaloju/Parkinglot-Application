<mvc:View
    controllerName="com.app.parkinglot.controller.Information"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.uxap"
    xmlns:layout="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    height="100%"
>
    <ObjectPageLayout
        id="ObjectPageLayout"
        enableLazyLoading="true"
        useIconTabBar="true"
        showTitleInHeaderContent="true"
        upperCaseAnchorBar="false"
    >
        <!-- User Information Section -->
        <headerTitle>
            <ObjectPageDynamicHeaderTitle id="idObjectPageDynamicHeaderTitle">
                <!-- <expandedHeading>
                    <m:Title
                        id="idUserInformation"
                        text="{parkinglot/parkingLotNumber}"
                        wrapping="true"
                    />
                        </expandedHeading> -->
            </ObjectPageDynamicHeaderTitle>
        </headerTitle>

        <!-- Borrowed Books Section -->
        <sections>
            <ObjectPageSection
                id="idParkingLotInformationSection"
                title="ParkingLot Information"
            >
                <subSections>
                    <ObjectPageSubSection id="idParkingLotInformationSubSection">
                        <blocks>
                            <core:Fragment
                                type="XML"
                                fragmentName="com.app.parkinglot.fragments.LotInformation"
                            />
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
             <ObjectPageSection
                id="idHistory"
                title="History"
            >
                <subSections>
                    <ObjectPageSubSection id="idHistorySubSection">
                        <blocks>
                            <core:Fragment
                                type="XML"
                                fragmentName="com.app.parkinglot.fragments.History"
                            />
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>

            <!-- Total Books Section -->
            <ObjectPageSection
                id="idDataVisualization"
                title="Data Visualization"
            >
                <subSections>
                    <ObjectPageSubSection id="idDataVisualizationSubSection">
                        <blocks>
                            <core:Fragment
                                type="XML"
                                fragmentName="com.app.parkinglot.fragments.DataVisualization"
                            />
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
        
        </sections>
    </ObjectPageLayout>
</mvc:View>
